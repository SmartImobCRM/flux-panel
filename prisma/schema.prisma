// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isAdmin   Boolean  @default(false)
  email     String   @unique
}

model DataSource {
  id          String   @id
  createdAt   DateTime @default(now())
  name        String   @unique
  type        String
  description String?

  url            String
  DataSourceLink DataSourceLink[]
}

model DataSourceLink {
  dataSource   DataSource @relation(fields: [dataSourceId], references: [id])
  dataSourceId String
  dataSet      DataSet    @relation(fields: [dataSetId], references: [id])
  dataSetId    String

  @@id([dataSourceId, dataSetId])
  @@index([dataSetId])
  @@index([dataSourceId])
}

model DataSet {
  id             String           @id
  createdAt      DateTime         @default(now())
  name           String           @unique
  description    String?
  DataSourceLink DataSourceLink[]
  Migracao       Migracao[]
}

model Migracao {
  status    String   @default("pendente")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  progress  Int      @default(0)
  serverId  String
  dataSetId String
  dataSet   DataSet  @relation(fields: [dataSetId], references: [id])
  name      String
  paused    Boolean  @default(false)
  id        String   @id
  @@index([dataSetId])
}
